{
  "openapi": "3.0.0",
  "info": {
    "title": "Вакансия+: API спецификация",
    "version": "1.0.0",
    "description": "API спецификация сервиса для поиска временной работы или стажировок."
  },
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Аутентификация и авторизация"
    },
    {
      "name": "UserInformation",
      "description": "Загрузка и обновление контактной информации"
    },
    {
      "name": "Vacancies",
      "description": "Создание и редактирование вакансий"
    },
    {
      "name": "Applications",
      "description": "Управление откликами на вакансии"
    },
    {
      "name": "Search",
      "description": "Поиск вакансий"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [ "Auth" ],
        "summary": "Авторизация пользователя",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "student_1@test.ru",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456",
                    "minLength": 6
                  },
                  "status": {
                    "type": "string",
                    "enum": [ "student", "employer" ],
                    "description": "Статус пользователя: студент, работодатель."
                  }
                },
                "required": [ "email", "password", "status" ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Авторизация успешна",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "userId": {
                      "type": "integer"
                    },
                    "userStatus": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Неправильные данные при авторизации"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [ "Auth" ],
        "summary": "Регистрация нового пользователя",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "employer_1@test.ru",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456",
                    "minLength": 6
                  },
                  "status": {
                    "type": "string",
                    "enum": [ "employer", "student" ],
                    "description": "Статус пользователя: студент, работодатель."
                  }
                },
                "required": [ "email", "password", "status" ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Пользователь создан",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "userId": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Ошибка валидации"
          }
        }
      }
    },
    "/information/student": {
      "get": {
        "tags": [ "UserInformation" ],
        "summary": "Получение данных студента",
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "Данные студента",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "studentId": { "type": "integer" },
                    "userId": { "type": "integer" },
                    "email": { "type": "string" },
                    "name": { "type": "string" },
                    "phone": { "type": "string" },
                    "resumeStatus": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/information/student/setting": {
      "post": {
        "tags": [ "UserInformation" ],
        "summary": "Обновление данных студента",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "phone": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Данные обновлены"
          }
        }
      }
    },
    "/information/employer": {
      "get": {
        "tags": [ "UserInformation" ],
        "summary": "Получение данных работодателя",
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "Данные работодателя",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "employerId": { "type": "integer" },
                    "userId": { "type": "integer" },
                    "email": { "type": "string" },
                    "name": { "type": "string" },
                    "phone": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/information/employer/setting": {
      "post": {
        "tags": [ "UserInformation" ],
        "summary": "Обновление данных работодателя",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "phone": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Данные обновлены"
          }
        }
      }
    },
    "/vacancies/add": {
      "post": {
        "tags": [ "Vacancies" ],
        "summary": "Создание вакансии",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "positionName": { "type": "string" },
                  "vacancyType": { "type": "string" },
                  "companyName": { "type": "string" },
                  "min_salary": { "type": "number" },
                  "max_salary": { "type": "number" },
                  "vacancyDescription": { "type": "string" }
                },
                "required": [ "positionName", "vacancyType", "companyName", "vacancyDescription" ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Вакансия создана"
          }
        }
      }
    },
    "/vacancies/{id}": {
      "get": {
        "tags": [ "Vacancies" ],
        "summary": "Получение вакансии по ID",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Данные вакансии"
          }
        }
      },
      "delete": {
        "tags": [ "Vacancies" ],
        "summary": "Удаление вакансии",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Вакансия удалена"
          }
        }
      }
    },
    "/empvacancies/my-vacancies": {
      "get": {
        "tags": [ "Vacancies" ],
        "summary": "Получение вакансий работодателя",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer" }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer" }
          },
          {
            "name": "status",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Список вакансий"
          }
        }
      }
    },
    "/applications": {
      "post": {
        "tags": [ "Applications" ],
        "summary": "Создание отклика на вакансию",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "vacancyId": { "type": "integer" }
                },
                "required": [ "vacancyId" ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Отклик создан"
          }
        }
      },
      "get": {
        "tags": [ "Applications" ],
        "summary": "Получение списка заявок",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer" }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer" }
          },
          {
            "name": "status",
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "type",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Список заявок"
          }
        }
      }
    },
    "/applications/check": {
      "get": {
        "tags": [ "Applications" ],
        "summary": "Проверка отклика на вакансию",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "vacancyId",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Статус отклика"
          }
        }
      }
    },
    "/applications/{id}": {
      "get": {
        "tags": [ "Applications" ],
        "summary": "Получение заявки по ID",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Данные заявки"
          }
        }
      },
      "delete": {
        "tags": [ "Applications" ],
        "summary": "Удаление заявки",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Заявка удалена"
          }
        }
      }
    },
    "/applications/{id}/status": {
      "put": {
        "tags": [ "Applications" ],
        "summary": "Изменение статуса заявки",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [ "accepted", "rejected" ]
                  }
                },
                "required": [ "status" ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Статус изменен"
          }
        }
      }
    },
    "/search": {
      "get": {
        "tags": [ "Search" ],
        "summary": "Поиск вакансий",
        "responses": {
          "200": {
            "description": "Список вакансий"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}